<layout name="Public/frontend_template"/>
<div id="content" class="wide">
    <h4>申请页面介绍</h4>
    <div>
        <form action="__URL__/apply_intro" method="post" class="form-horizontal" enctype="multipart/form-data">
            <textarea name="apply_intro" class="editor" id="apply_intro">{$apply_intro}</textarea>
            <input type="submit" class="btn btn-small btn-danger" value="创建" />
        </form>
    </div>
    <h4>候选人介绍</h4>
    <div>
        <form action="__URL__/apply_intro" method="post" class="form-horizontal" enctype="multipart/form-data">
            <textarea name="candidate_intro" class="editor" id="candidate_intro">{$candidate_intro}</textarea>
            <input type="submit" class="btn btn-small btn-danger" value="创建" />
        </form>
    </div>
   	<h4>推荐人介绍</h4>
    <div>
        <form action="__URL__/apply_intro" method="post" class="form-horizontal" enctype="multipart/form-data">
            <textarea name="recommend_intro" class="editor" id="recommend_intro">{$recommend_intro}</textarea>
            <input type="submit" class="btn btn-small btn-danger" value="创建" />
        </form>
    </div> 
</div>