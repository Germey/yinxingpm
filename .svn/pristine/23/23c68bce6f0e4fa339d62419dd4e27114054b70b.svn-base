    	})
    });
  });

function show_alert_tip(msg) {
    $("#alert-tip").html("<p>"+msg+"</p>").show();
    setTimeout("$('#alert-tip').slideUp('slow', function(){ $('#alert-tip').hide(); })", 5000);
}

function save_all() {
	$(".background_survey .answer").trigger("blur");
}

